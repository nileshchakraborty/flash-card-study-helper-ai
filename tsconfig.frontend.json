{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./public/js",
    "outDir": "./public/dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [],
    "noEmit": false,
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": [
    "public/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
