{
  "name": "mindflip-ai",
  "version": "1.0.0",
  "description": "AI-powered flash card study helper with swipeable cards, file uploads, and quiz functionality",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "clean": "rm -rf dist public/dist",
    "clean:backend": "rm -rf dist",
    "clean:frontend": "rm -rf public/dist",
    "prebuild": "npm run clean:backend",
    "build": "tsc -p tsconfig.build.json",
    "prebuild:frontend": "npm run clean:frontend",
    "build:frontend": "node esbuild.config.cjs",
    "build:all": "npm run clean && npm run build && npm run build:frontend",
    "start": "USE_LOCAL_DB=true USE_LOCAL_VECTOR=true USE_LOCAL_QUEUE=true npm run clean && npm run build:all && tsx src/index.ts",
    "serve": "node dist/index.js",
    "dev": "npm run build:frontend && tsx src/index.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs"
  },
  "keywords": [
    "flashcards",
    "study",
    "ai",
    "education",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
